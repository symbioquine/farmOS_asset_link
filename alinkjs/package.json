{
  "dependencies": {
    "lerna": "^5.1.8"
  },
  "name": "farmOS_asset_link",
  "devDependencies": {
    "multiview": "^3.0.1",
    "nx": "^14.4.3"
  },
  "scripts": {
    "build": "lerna run build",
    "dev": "multiview [npm run dev:assetlink] [npm run serve:sidecar] [npm run serve:pwa] -e",
    "dev:assetlink": "lerna run dev --stream --scope=assetlink --ignore='assetlink-*'",
    "serve:sidecar": "lerna run serve --stream --scope=assetlink-sidecar -- --port 1234",
    "serve:pwa": "ASSET_LINK_DEV_PROXY_TARGET='http://127.0.0.1:1234' lerna run serve --stream --scope=assetlink-pwa -- --port 1235"
  }
}
