{
  "name": "farmOS_asset_link",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@vue/compiler-sfc": "^3.2.37",
    "better-docs": "^2.7.2",
    "jsdoc": "^3.6.7",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-vuejs": "^4.0.0",
    "live-server": "^1.1.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.7"
  },
  "scripts": {
    "build": "npm -ws run build",
    "lint": "npm -ws run lint",
    "docs": "jsdoc -c ./jsdoc-cfg/jsdoc.conf.js",
    "watch-doc-src": "nodemon --exec 'npm run docs' -e js,vue,md,ejs,json,png,webm --watch ./jsdoc-cfg --watch ./packages/assetlink-plugin-api/src --watch ./packages/assetlink-plugin-api/tutorials --watch ./packages/assetlink-plugin-api/README.md --watch ./packages/assetlink-plugin-dev-support/src",
    "serve-docs": "cd ../website && live-server --no-browser --wait=1000",
    "docs-dev": "npm run docs && npm run serve-docs & npm run watch-doc-src"
  }
}
